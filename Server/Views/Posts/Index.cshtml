@model IEnumerable<aspnet102.Server.Models.Post>

    <h2>Posts</h2>

    <p>
        <a href="@Url.Action("Create")">Create New Post</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
